<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="ERROR" monitorInterval="3600">
    <Properties>
        <property name="pattern_file">
            %d{dd-MM-yyyy HH:mm:ss} [%t] %-5level %logger{3} - %msg method %M%n
        </property>
        <property name="pattern_console">
            %r [%t] %5level %logger{1} - %msg method %M%n
        </property>
    </Properties>
    <Appenders>
        <RollingFile name="TxtFile" fileName="log.txt" filePattern="logs/${date:dd-MM-yyyy}/%d{mm-HH}_%i.txt"
                     append="true" bufferedIO="true" bufferSize="1024">
            <PatternLayout pattern="${pattern_file}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <Console name="Console" target="SYSTEM.OUT">
            <PatternLayout pattern="${pattern_console}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger level="INFO" name="com.belhard">
            <AppenderRef ref="TxtFile"/>
        </Logger>
    </Loggers>
</Configuration>


